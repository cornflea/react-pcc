{
  "name": "@cornflea/react-pcc",
  "version": "1.0.0",
  "description": "A CLI tool that finds the latest compatible version of any npm package for your project's current React version.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "react-pcc": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "npm",
    "package",
    "compatibility",
    "checker",
    "react",
    "typescript",
    "cli"
  ],
  "author": "abhishek88666kumar@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "release": "semantic-release --no-ci",
    "release:dry": "semantic-release --dry-run --no-ci"
  },
  "dependencies": {
    "npm-registry-fetch": "^19.0.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
